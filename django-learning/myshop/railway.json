{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "django-learning/myshop/Dockerfile"
    },
    "deploy": {
        "startCommand": "gunicorn myshop.wsgi:application --bind 0.0.0.0:$PORT",
        "healthcheckPath": "/products/",
        "restartPolicyType": "ON_FAILURE"
    }
}